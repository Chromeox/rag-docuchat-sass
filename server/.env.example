# ---- DATABASE ----
POSTGRES_USER=llm_user
POSTGRES_PASSWORD=Admin@123
POSTGRES_DB=web3_ai
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT
JWT_SECRET_KEY=yourjwtsecretkey
SECRET_KEY=supersecret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

EMBEDDING_PROVIDER=huggingface
# openai | huggingface | ollama | fastembed

LLM_PROVIDER=groq
# openai | huggingface | groq

# Only required if provider=openai
OPENAI_API_KEY=your-openai-key

# Huggingface
HUGGINGFACEHUB_API_TOKEN=our-hf-key

#Groq
GROQ_API_KEY=our-groq-key
GROQ_MODEL=llama-3.3-70b-versatile

# Only required if provider=ollama
OLLAMA_BASE_URL=http://host.docker.internal:11434

DATABASE_URL=postgresql://postgres:postgres@db:5432/web3_ai

# Supabase pgvector for persistent embeddings storage (optional)
# If not set, falls back to ephemeral FAISS storage
SUPABASE_DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=""
